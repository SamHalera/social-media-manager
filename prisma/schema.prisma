generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  firstname String  
  lastname  String
  token     String
  hash      String
  salt      String
  post      Post[]

}

model Post{
  id      Int     @id @default(autoincrement())
  name String
  caption  String
  hashtag String
  imagesComment String?
  status Status
  createdAt DateTime
  updatedAt DateTime
  publishedAt DateTime?
  publicationDate DateTime?
  user User @relation(fields: [userId], references: [id])
  userId Int
  campaign Campaign @relation(fields: [campaignId], references: [id])
  campaignId Int
  media Media[]
  
 
}

model Campaign {
  id  Int     @id @default(autoincrement())
  name String
  isArchived Boolean @default(false)
  post Post[]
}
model Media {
  id  Int     @id @default(autoincrement())
  source String
  publicId  String
  post Post? @relation(fields: [postId], references: [id])
  postId   Int?
 

}

enum Status {
  PUBLISHED
  PENDING
  DRAFT
}



 


